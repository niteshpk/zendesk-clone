<!-- src/views/partials/tenant/widgetConfig.ejs -->
<div class="card mb-4">
  <div class="card-body">
    <h4 class="card-title">Widget Configuration</h4>
    <form id="widgetForm">
      <div class="mb-3">
        <label>Widget Title</label>
        <input type="text" class="form-control" name="widgetTitle" id="widgetTitle" required>
      </div>
      <div class="mb-3">
        <label>Welcome Text</label>
        <input type="text" class="form-control" name="welcomeText" id="welcomeText" required>
      </div>
      <div class="mb-3">
        <label>Logo URL</label>
        <input type="text" class="form-control" name="logoUrl" id="logoUrl">
      </div>
      <div class="mb-3">
        <label>Widget Color</label>
        <input type="text" class="form-control" name="color" id="color" placeholder="#000000">
      </div>
      <div class="d-grid">
        <button type="submit" class="btn btn-primary">Save Widget</button>
      </div>
    </form>
  </div>
</div>
