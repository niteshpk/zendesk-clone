<!-- views/tenant-dashboard.ejs -->

<div class="container w-75 mt-4">

  <h1 class="mb-4">Tenant Dashboard</h1>
 
  <div class="mb-3">
    <button id="refreshBtn" class="btn btn-outline-dark" onclick="window.location.reload()">Refresh</button>
    <button id="logoutBtn" class="btn btn-danger">Logout</button>
  </div>

  <!-- Tenant Info -->
  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">Tenant Info</h5>
      <p><strong>Business Name:</strong> <span id="businessName"></span></p>
      <p><strong>Email:</strong> <span id="email"></span></p>
      <p><strong>Tenant ID:</strong> <span id="tenantId"></span></p>
    </div>
  </div>

  <!-- Widget Config -->
  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">Widget Config</h5>
      <form method="POST" action="/create-widget">
        <div class="mb-3">
          <label>Widget Title:</label>
          <input type="text" name="widgetTitle" class="form-control"/>
        </div>
        <div class="mb-3">
          <label>Welcome Text:</label>
          <input type="text" name="welcomeText" class="form-control"/>
        </div>
        <div class="mb-3">
          <label>Logo URL:</label>
          <input type="text" name="logoUrl" class="form-control"/>
        </div>
        <div class="mb-3">
          <label>Widget Color (Hex):</label>
          <input type="text" name="color" class="form-control"/>
        </div>
        <input type="hidden" id="tenantIdInput" name="tenantId" value="" />
        <button type="submit" class="btn btn-primary">Save Widget</button>
      </form>
    </div>
  </div>

  <!-- Agent List -->
  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">Existing Agents</h5>
      <table class="table table-bordered">
        <thead>
          <tr><th>Agent ID</th><th>Username</th><th>Password</th></tr>
        </thead>
        <tbody id="agentTableBody"></tbody>
      </table>
    </div>
  </div>

  <!-- Add Agent -->
  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">Add New Agent</h5>
      <form method="POST" action="/create-agent">
        <div class="mb-3">
          <label>Agent Name:</label>
          <input type="text" name="agentName" class="form-control" required />
        </div>
        <div class="mb-3">
          <label>Agent Password:</label>
          <input type="password" name="agentPassword" class="form-control" autocomplete="current-password" required />
        </div>
        <input type="hidden" id="tenantIdInput2" name="tenantId" value="" />
        <button type="submit" class="btn btn-success">Create Agent</button>
      </form>
    </div>
  </div>

</div>

<script src="/js/utils.js"></script>

<script>
  window.onload = async function () {
    const tenantId = utils.getCookie('tenantId');
    if (!tenantId) {
      alert("Session expired. Please login again.");
      window.location.href = '/tenant-login';
      return;
    }

    document.getElementById("tenantIdInput").value = tenantId;
    document.getElementById("tenantIdInput2").value = tenantId;

    // Load tenant info
    fetch(`/tenant-info/${tenantId}`)
      .then(res => res.json())
      .then(tenant => {
        document.getElementById("businessName").innerText = tenant.businessName;
        document.getElementById("email").innerText = tenant.email;
        document.getElementById("tenantId").innerText = tenant.tenantId;
      });

    // Load widget config
    fetch(`/widget-config/${tenantId}`)
      .then(res => res.json())
      .then(config => {
        document.querySelector('[name="widgetTitle"]').value = config.widgetTitle || "";
        document.querySelector('[name="welcomeText"]').value = config.welcomeText || "";
        document.querySelector('[name="logoUrl"]').value = config.logoUrl || "";
        document.querySelector('[name="color"]').value = config.color || "#000000";
      });

    // Load agents
    fetch(`/agent-list/${tenantId}`)
      .then(res => res.json())
      .then(agentList => {
        const tbody = document.getElementById("agentTableBody");
        agentList.forEach(agent => {
          const row = document.createElement('tr');
          row.innerHTML = `<td>${agent.agentId}</td><td>${agent.username}</td><td>${agent.plainPassword}</td>`;
          tbody.appendChild(row);
        });
      });

    document.getElementById('logoutBtn').onclick = () => {
      utils.deleteCookie('tenantId');
      window.location.href = '/tenant-login';
    };

    // Optional: handle browser back button protection
    window.addEventListener("pageshow", () => {
      if (!utils.getCookie('tenantId')) {
        window.location.href = '/tenant-login';
      }
    });
  }
</script>
