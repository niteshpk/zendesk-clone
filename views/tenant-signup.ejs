<!-- views/tenant-signup.ejs -->


<div class="container w-50 mt-5">

  <h2 class="mb-4">Tenant Signup</h2>

  <form method="POST" action="/tenant-signup">
    <div class="mb-3">
      <label>Business Name:</label>
      <input type="text" name="businessName" class="form-control" required />
    </div>

    <div class="mb-3">
      <label>Email:</label>
      <input type="email" name="email" class="form-control" required />
    </div>

    <div class="mb-3">
      <label>Password:</label>
      <input type="password" name="password" class="form-control" autocomplete="current-password" required />
    </div>

    <button type="submit" class="btn btn-success">Sign Up</button>
  </form>

  <p class="mt-3">
    Already have an account? <a href="/tenant-login">Login here</a>
  </p>

</div>
