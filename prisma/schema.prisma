// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id           String   @id @default(cuid())
  businessName String
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  agents  Agent[]
  widgets Widget[]
  messages Message[]
}

model Agent {
  id         String   @id @default(cuid())
  username   String
  passwordHash String
  tenant     Tenant   @relation(fields: [tenantId], references: [id])
  tenantId   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Widget {
  id          String   @id @default(cuid())
  tenant      Tenant   @relation(fields: [tenantId], references: [id])
  tenantId    String
  color       String
  widgetTitle String
  welcomeText String
  logoUrl     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Message {
  id           String   @id @default(cuid())
  tenant       Tenant   @relation(fields: [tenantId], references: [id])
  tenantId     String
  sender       String   // 'client' or 'agent'
  agentUsername String?  // only for agent messages
  content      String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
